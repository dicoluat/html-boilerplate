<section class="section__careers">
    <div class="careers__image">
      <img src="{{ componentData.image }}">
    </div>
    <div class="careers__body">
      <h2 class="heading2">{{ componentData.title ?? '...' }}</h2>
      <p class="content">{{ componentData.desc ?? '...' }}</p>
      <h3 class="heading3">{{ componentData.list_title ?? '...' }}</h3>
      <div>
        {% for item in componentData.items %}
          <div class="career-item">
            <div class="career-item__title">
              {{ item.title ?? '...' }}
            </div>
            <div class="career-item__location">
              {{ item.location ?? '...' }}
            </div>
            <a href="{{ item.button.link ??'#' }}">{{ item.button.title ?? '...' }}</a>
          </div>
        {% endfor %}
      </div>
      <div>
        <a
            class="button button__orange"
            href="{{ componentData.button.link ??'#' }}">{{ componentData.button.title ?? '...' }}</a>
      </div>
    </div>
</section>
